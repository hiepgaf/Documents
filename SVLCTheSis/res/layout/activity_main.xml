<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.svlcthesis.activity.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="1dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="ĐẠI HỌC BÁCH KHOA HÀ NỘI"
            android:textColor="#ff0000"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="VIỆN ĐIỆN TỬ VIỄN THÔNG"
            android:textColor="#002233"
            android:textSize="21dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="1dp" >

        <ImageView
            android:layout_width="100dip"
            android:layout_height="170dip"
          
            android:layout_weight="1"
           
            android:scaleType="centerInside"
            android:src="@drawable/startframe" />
<!-- 
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dip"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ffffff" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:orientation="vertical"
        >
 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="ĐỒ ÁN TỐT NGHIỆP"
            android:textColor="#FF0000"
            android:textSize="22dp"
            android:textStyle="bold" />
  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="Tên Tiếng Việt:"
            android:textColor="#003333"
            android:textSize="15dp"
            android:padding="1dip"
            android:layout_margin="1dip"
            
            android:textStyle="italic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Ứng dụng truyền dữ liệu qua môi trường ánh sáng nhìn thấy trên Smartphone"
            android:textColor="#003333"
            android:textSize="20dp"
            android:textStyle="bold" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="Tên Tiếng Anh:"
            android:textColor="#003333"
            android:textSize="15dp"
            android:padding="1dip"
            android:layout_margin="1dip"
            android:textStyle="italic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Smartphone Visible Light Communication Application"
            android:textColor="#003333"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="2dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="2dp" >

       

            <Button
                android:id="@+id/imageButton1"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="GỬI DỮ LIỆU"
                android:textStyle="bold" />

            <Button
                android:id="@+id/imageButton2"
                 android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:padding="1dp"
                android:text="NHẬN DỮ LIỆU"
                android:textStyle="bold" />
     
    </LinearLayout>

</LinearLayout>