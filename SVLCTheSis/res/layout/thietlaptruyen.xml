<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dip"
    android:layout_margin="4dip" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn từ File"
            android:textColor="#006633"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập dữ liệu từ bàn phím"
            android:textColor="#006633"
            android:textStyle="bold" />
    </RadioGroup>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutchon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/chonfiletruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn file" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Tên file "
                    android:textColor="#006633"
                    android:textStyle="bold" />

                <TextView
                    android:text="chưa chọn file"
                    android:id="@+id/tenfile"
                    android:textColor="#FF0000"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Đường dẫn "
                    android:textColor="#006633"
                    android:textStyle="bold" />

                <TextView
                    android:text="chưa chọn file"
                    android:id="@+id/duongdan"
                    android:singleLine="false"
                    android:textColor="#FF0000"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Số kí tự "
                    android:textColor="#006633"
                    android:textStyle="bold" />

                <TextView
                    android:text="0 kí tự"
                    android:id="@+id/sokitu"
                    android:textColor="#FF0000"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Mã hóa "
                    android:textColor="#006633"
                    android:textStyle="bold" />

                <TextView
                    android:text="0 ảnh"
                    android:id="@+id/soluonganh"
                    android:textColor="#FF0000"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutnhap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập dữ liệu:"
            android:textColor="#006633"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nhapdulieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="Nhập vào dữ liệu cần truyền"
            android:lines="5"
            android:singleLine="false" />
         <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="0" >

          

            <TableRow
             
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Số kí tự "
                    android:textColor="#006633"
                    android:textStyle="bold" />

                <TextView
                    android:text="0 kí tự"
                    android:id="@+id/sokitued"
                    android:textColor="#FF0000"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:text="Mã hóa "
                    android:textColor="#006633"
                    android:textStyle="bold" />

                <TextView
                    android:text="0 ảnh"
                    android:id="@+id/soluonganhed"
                    android:textColor="#FF0000"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/xongxuoi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Xong" />

</LinearLayout>